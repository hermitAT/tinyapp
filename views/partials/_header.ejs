<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <% if (!user) { %>
      <form class="form-inline" action="/login" method="POST" style="float: right">
        <div class="form-group mb-2">
          <input class="form-control" type="text" placeholder="Username" name="username" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" action="/logout" method="POST" style="float: right">
        <h7>Logged in as <%= user.email %></h7>
        <input type="submit" value="Logout" style="margin: 1em">
      </form>
    <% } %>
  </nav>
</header>